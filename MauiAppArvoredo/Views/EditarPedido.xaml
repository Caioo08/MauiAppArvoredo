<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppArvoredo.Views.EditarPedido"
             Title="Novo Pedido"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#fae6c2" Offset="0.1"/>
            <GradientStop Color="#c68f56" Offset="0.4"/>
            <GradientStop Color="#b47b39" Offset="0.7"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Cliente -->
            <Label Text="Cliente" FontAttributes="Bold" FontSize="18" WidthRequest="330" TextColor="#391b01"/>
            <Entry x:Name="EntryCliente" Placeholder="Nome do cliente" BackgroundColor="#f5f5f5" TextColor="#391b01" HeightRequest="40" WidthRequest="330">
                <Entry.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="Android" Value="Transparent"/>
                    </OnPlatform>
                </Entry.BackgroundColor>
                <Entry.PlaceholderColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="Android" Value="Black"/>
                    </OnPlatform>
                </Entry.PlaceholderColor>
            </Entry>

            <!-- Tipo de Madeira -->
            <Label Text="Tipo de Madeira" FontAttributes="Bold" FontSize="18" WidthRequest="330" TextColor="#391b01"/>
            <Picker x:Name="PickerMadeira" Title="Selecione a madeira" BackgroundColor="#f5f5f5" TextColor="#391b01" TitleColor="#391b01" HeightRequest="60" SelectedIndexChanged="PickerMadeira_SelectedIndexChanged" WidthRequest="330">
                <Picker.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="Android" Value="Transparent"/>
                    </OnPlatform>
                </Picker.BackgroundColor>
            </Picker>

            <!-- Formato -->
            <Label Text="Formato" FontAttributes="Bold" FontSize="18" WidthRequest="330" TextColor="#391b01"/>
            <Picker x:Name="PickerFormato" Title="Selecione o formato" BackgroundColor="#f5f5f5" TextColor="#391b01" TitleColor="#391b01" HeightRequest="60" WidthRequest="330">
                <Picker.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="Android" Value="Transparent"/>
                    </OnPlatform>
                </Picker.BackgroundColor>
            </Picker>

            <!-- Tamanho -->
            <Label Text="Tamanho" FontAttributes="Bold" FontSize="18" WidthRequest="330" TextColor="#391b01"/>
            <Picker x:Name="PickerTamanho" Title="Selecione o tamanho" BackgroundColor="#f5f5f5" TextColor="#391b01" TitleColor="#391b01" HeightRequest="60" WidthRequest="330">
                <Picker.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="Android" Value="Transparent"/>
                    </OnPlatform>
                </Picker.BackgroundColor>
            </Picker>

            <!-- Quantidade -->
            <Label Text="Quantidade" FontAttributes="Bold" FontSize="18" WidthRequest="330" TextColor="#391b01"/>
            <Entry x:Name="EntryQuantidade" Placeholder="0" Keyboard="Numeric" BackgroundColor="#f5f5f5" TextColor="#391b01" HeightRequest="40" WidthRequest="330">
                <Entry.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="Android" Value="Transparent"/>
                    </OnPlatform>
                </Entry.BackgroundColor>
                <Entry.PlaceholderColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="Android" Value="Black"/>
                    </OnPlatform>
                </Entry.PlaceholderColor>
            </Entry>

            <!-- Botao Adicionar Item -->
            <Button Text="Adicionar Item" Clicked="BtnAdicionarItem_Clicked"
                    BackgroundColor="#391b01" TextColor="White" CornerRadius="10"
                    HeightRequest="45" WidthRequest="150"/>

            <!-- Lista de Itens -->
            <Label Text="Itens do Pedido" FontAttributes="Bold" FontSize="18" WidthRequest="330" TextColor="#391b01"/>
            <CollectionView x:Name="ListaItens" HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#efd4ac" CornerRadius="10" Margin="0,5" Padding="10" WidthRequest="330">
                            <HorizontalStackLayout>
                                <Label Text="{Binding Nome}" FontAttributes="Bold" TextColor="#391b01"/>
                                <Label Text="{Binding Quantidade}" TextColor="#391b01" HorizontalOptions="EndAndExpand"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botao Salvar Pedido -->
            <Button Text="Salvar Pedido" Clicked="BtnSalvar_Clicked"
                    BackgroundColor="#391b01" TextColor="White" CornerRadius="10"
                    HeightRequest="45" WidthRequest="150"/>
            <Button Text="Sair" Clicked="BtnSair_Clicked"
                    BackgroundColor="#391b01" TextColor="White" CornerRadius="10"
                    WidthRequest="150" HeightRequest="45"/>     
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
