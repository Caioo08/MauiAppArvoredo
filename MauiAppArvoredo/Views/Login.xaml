<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppArvoredo.Login"
             Shell.NavBarIsVisible="False"
             NavigationPage.BackButtonTitle="Empty">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#fae6c2" Offset="0.1"/>
            <GradientStop Color="#c68f56" Offset="0.4"/>
            <GradientStop Color="#b47b39" Offset="0.7"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Layout principal -->
    <Grid>
        <!-- Botão sair no topo esquerdo -->
        <ImageButton Source="seta.png"
                BackgroundColor="Transparent"
                WidthRequest="40"
                HeightRequest="40"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="10"
                Clicked="OnSairClicked"/>

        <!-- Conteúdo central -->
        <VerticalStackLayout VerticalOptions="Center">

            <!-- Título estilizado -->
            <Label Text="LOGIN"
                   FontFamily="Gagalin-Regular"
                   FontSize="40"
                   HorizontalOptions="Center"
                   TextColor="#391b01"
                   Margin="0,0,0,10"/>

            <!-- Campo de email -->
            <Entry x:Name="EmailEntry"
                   Placeholder="Digite seu login"
                   TextColor="Black"
                   HeightRequest="50"
                   WidthRequest="330"
                   PlaceholderColor="Black">
                <Entry.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="WinUI" Value="White"/>
                        <On Platform="Android" Value="Transparent"/>
                    </OnPlatform>
                </Entry.BackgroundColor>
            </Entry>
            <BoxView HeightRequest="2" WidthRequest="330">
                <BoxView.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="WinUI" Value="Transparent"/>
                        <On Platform="Android" Value="Black"/>
                    </OnPlatform>
                </BoxView.BackgroundColor>
            </BoxView>

            <!-- Campo de senha -->
            <Entry x:Name="SenhaEntry"
                   Placeholder="Digite sua senha"
                   IsPassword="True"
                   TextColor="Black"
                   PlaceholderColor="Black"
                   HeightRequest="50"
                   WidthRequest="330">
                <Entry.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="WinUI" Value="White"/>
                        <On Platform="Android" Value="Transparent"/>
                    </OnPlatform>
                </Entry.BackgroundColor>
            </Entry>
            <BoxView HeightRequest="2" WidthRequest="330">
                <BoxView.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="WinUI" Value="Transparent"/>
                        <On Platform="Android" Value="Black"/>
                    </OnPlatform>
                </BoxView.BackgroundColor>
            </BoxView>

            <!-- Botão de Login -->
            <Button Text="ENTRAR"
                    FontFamily="Gagalin-Regular"
                    BackgroundColor="#391b01"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="55"
                    Margin="0,15"
                    WidthRequest="330"
                    Clicked="OnLoginClicked"/>

            <!-- Botão de Registro -->
            <Button Text="REGISTRAR"
                    FontFamily="Gagalin-Regular"
                    BackgroundColor="#d4a373"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="55"
                    WidthRequest="330"
                    Clicked="OnRegisterClicked" IsVisible="False"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
