<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppArvoredo.Views.EditarEstoque"
             Title="Editar Produto"             
             Shell.NavBarIsVisible="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#fae6c2" Offset="0.1"/>
            <GradientStop Color="#c68f56" Offset="0.4"/>
            <GradientStop Color="#b47b39" Offset="0.7"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" >
            <StackLayout HorizontalOptions="Start">
                <Label Text="Descrição" TextColor="Black"/>
                <Entry x:Name="entryDescricao" Placeholder="Descrição do produto" WidthRequest="330" TextColor="Black">
                    <Entry.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="White"/>
                            <On Platform="Android" Value="Transparent"/>
                        </OnPlatform>
                    </Entry.BackgroundColor>
                </Entry>
                <BoxView HeightRequest="2" WidthRequest="330">
                    <BoxView.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="Transparent"/>
                            <On Platform="Android" Value="Black"/>
                        </OnPlatform>
                    </BoxView.BackgroundColor>
                </BoxView>

                <Label Text="Quantidade" TextColor="Black" />
                <Entry x:Name="entryQuantidade" Keyboard="Numeric" WidthRequest="330" TextColor="Black">
                    <Entry.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="White"/>
                            <On Platform="Android" Value="Transparent"/>
                        </OnPlatform>
                    </Entry.BackgroundColor>
                </Entry>
                <BoxView HeightRequest="2" WidthRequest="330">
                    <BoxView.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="Transparent"/>
                            <On Platform="Android" Value="Black"/>
                        </OnPlatform>
                    </BoxView.BackgroundColor>
                </BoxView>

                <Label Text="Quantidade Mínima" TextColor="Black" />
                <Entry x:Name="entryQuantidadeMin" Keyboard="Numeric" WidthRequest="330" TextColor="Black">
                    <Entry.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="White"/>
                            <On Platform="Android" Value="Transparent"/>
                        </OnPlatform>
                    </Entry.BackgroundColor>
                </Entry>
                <BoxView HeightRequest="2" WidthRequest="330">
                    <BoxView.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="Transparent"/>
                            <On Platform="Android" Value="Black"/>
                        </OnPlatform>
                    </BoxView.BackgroundColor>
                </BoxView>

                <Label Text="Unidade" TextColor="Black" />
                <Entry x:Name="entryUnidade" WidthRequest="330" TextColor="Black">
                    <Entry.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="White"/>
                            <On Platform="Android" Value="Transparent"/>
                        </OnPlatform>
                    </Entry.BackgroundColor>
                </Entry>
                <BoxView HeightRequest="2" WidthRequest="330">
                    <BoxView.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="Transparent"/>
                            <On Platform="Android" Value="Black"/>
                        </OnPlatform>
                    </BoxView.BackgroundColor>
                </BoxView>

                <Label Text="Valor Unitário" TextColor="Black" />
                <Entry x:Name="entryValor" Keyboard="Numeric" WidthRequest="330" TextColor="Black">
                    <Entry.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="White"/>
                            <On Platform="Android" Value="Transparent"/>
                        </OnPlatform>
                    </Entry.BackgroundColor>
                </Entry>
                <BoxView HeightRequest="2" WidthRequest="330">
                    <BoxView.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color">
                            <On Platform="WinUI" Value="Transparent"/>
                            <On Platform="Android" Value="Black"/>
                        </OnPlatform>
                    </BoxView.BackgroundColor>
                </BoxView>
            </StackLayout>


            <Button Text="Salvar" Clicked="BtnSalvar_Clicked" WidthRequest="330" BackgroundColor="#391b01" TextColor="White"/>
            <Button Text="Voltar" Clicked="Voltar_Clicked" WidthRequest="330" BackgroundColor="#391b01" TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
